<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Первое число"
        android:inputType="number"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Второе число"
        android:inputType="number"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/number1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/Resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/number2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="40dp" />

    <Button
        android:id="@+id/Sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:onClick="buttonClick"
        android:text="+"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/num1"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Minus"
        app:layout_constraintTop_toBottomOf="@id/Resultat"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="204dp"
        android:onClick="buttonClick2"
        android:text="-"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/Sum"
        app:layout_constraintRight_toLeftOf="@+id/division"
        app:layout_constraintTop_toBottomOf="@id/Resultat"
        app:layout_constraintBottom_toTopOf="@id/num2"/>

    <Button
        android:id="@+id/division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="204dp"
        android:onClick="buttonClick3"
        android:text="/"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/Minus"
        app:layout_constraintRight_toLeftOf="@+id/multiply"
        app:layout_constraintTop_toBottomOf="@id/Resultat"
        app:layout_constraintBottom_toTopOf="@id/num3"/>

    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="204dp"
        android:onClick="buttonClick4"
        android:text="*"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/division"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Resultat"
        />

    <Button
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/num4"
        app:layout_constraintRight_toLeftOf="@id/num2"
        app:layout_constraintTop_toBottomOf="@+id/Sum" />

    <Button
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:text="2"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/num1"
        app:layout_constraintTop_toBottomOf="@id/Minus"
        app:layout_constraintBottom_toTopOf="@id/num5"/>

    <Button
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="3"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/num2"
        app:layout_constraintTop_toBottomOf="@id/division"
        app:layout_constraintBottom_toTopOf="@id/num6"/>

    <Button
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:text="4"
        android:textSize="18sp"
        app:layout_constraintRight_toLeftOf="@id/num5"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        app:layout_constraintBottom_toTopOf="@id/num7"/>

    <Button
        android:id="@+id/num5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="5"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/num8"
        app:layout_constraintLeft_toRightOf="@id/num4"
        app:layout_constraintTop_toBottomOf="@id/num2" />

    <Button
        android:id="@+id/num6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="6"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/num5"
        app:layout_constraintTop_toBottomOf="@id/num3"
        app:layout_constraintBottom_toTopOf="@id/num9"/>

    <Button
        android:id="@+id/num7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:text="7"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/num8"
        app:layout_constraintTop_toBottomOf="@id/num4"
        app:layout_constraintBottom_toTopOf="@id/point"/>

    <Button
        android:id="@+id/num8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:text="8"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/num7"
        app:layout_constraintTop_toBottomOf="@id/num5"
        app:layout_constraintBottom_toTopOf="@id/num0"/>

    <Button
        android:id="@+id/num9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:text="9"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/num8"
        app:layout_constraintTop_toBottomOf="@id/num6"
        app:layout_constraintBottom_toTopOf="@id/delete"/>

    <Button
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:text="."
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@id/num0"
        app:layout_constraintTop_toBottomOf="@id/num7"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/num0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="0"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/point"
        app:layout_constraintTop_toBottomOf="@id/num8"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="DEL"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/num0"
        app:layout_constraintTop_toBottomOf="@id/num9"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>